{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "start": "npm run db:deploy && npm run db:seed && npm run dev",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate",
    "deploy": "run-s build zip update",
    "db:seed": "tsx src/db/seeding.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest --watch --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.15.29",
    "@types/nodemailer": "^6.4.17",
    "@types/redis": "^4.0.10",
    "@vitest/ui": "^3.2.3",
    "esbuild": "^0.25.5",
    "npm-run-all2": "^6.2.0",
    "prisma": "^6.9.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/node-ws": "^1.1.7",
    "@hono/zod-validator": "^0.4.3",
    "@prisma/client": "^6.9.0",
    "@scalar/hono-api-reference": "^0.8.2",
    "@vitest/coverage-v8": "^3.2.3",
    "argon2": "^0.43.0",
    "dotenv": "^16.5.0",
    "hono": "^4.7.11",
    "hono-openapi": "^0.4.6",
    "hono-rate-limiter": "^0.4.2",
    "nodemailer": "^7.0.5",
    "redis": "^5.5.6",
    "resend": "^4.6.0",
    "zod": "^3.25.57",
    "zod-openapi": "^4.2.4"
  }
}
